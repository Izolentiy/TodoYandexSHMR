<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:fontFamily">@font/sf_pro_display</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ExpandedTitle" parent="Title">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="RegularTitle" parent="Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogTitle" parent="Title">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="RegularText">
        <item name="android:fontFamily">@font/sf_pro_text</item>
    </style>

    <style name="Button" parent="RegularText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body" parent="RegularText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Subhead" parent="RegularText">
        <item name="android:textSize">14sp</item>
    </style>

</resources>