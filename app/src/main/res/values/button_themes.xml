<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:app="http://schemas.android.com/apk/res-auto">

    <style name="ToggleButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="iconTint">@null</item>
        <item name="rippleColor">@null</item>
        <item name="strokeColor">@color/st_priority_toggle_button</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:backgroundTint">@color/bg_priority_toggle_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Button</item>
        <item name="android:textColor">@color/labelPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="ToggleButton.New" parent="Widget.MaterialComponents.Button">

        <item name="iconPadding">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/Button</item>
        <item name="android:textColor">@color/labelPrimary</item>
        <item name="android:backgroundTint">@color/bg_priority_toggle_button</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="RegularButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/labelPrimary</item>
        <item name="backgroundTint">@color/backSecondary</item>
        <item name="textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

</resources>