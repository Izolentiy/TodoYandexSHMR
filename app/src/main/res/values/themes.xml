<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TodoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/backSecondary</item>
        <item name="colorOnPrimary">@color/labelPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/labelSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/backPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorControlNormal">@color/labelPrimary</item>
    </style>
</resources>